<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/dialog_background_round">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/seek_start"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8a8f96"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:text="프로필 설정" />

    <ImageButton
        android:id="@+id/bt_ch_profile"
        android:background ="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/icon_share" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_name"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#8a8f96"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:backgroundTint="#8795ff"
        android:text="text"
        android:textSize="18sp"/>


    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity = "right">


            <Button
                android:id="@+id/bt_profile_okay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#293942"
                android:textColor="#8a8f96"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/bt_profile_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:background="#293942"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginRight="10dp"
                android:textColor="#8a8f96"/>





    </LinearLayout>
</LinearLayout>